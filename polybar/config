# _ COLORS _-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_

[colors]
include-file = ~/.config/i3/polybar/blocks/colors

# _ SETTINGS _-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_

[settings]
screenchange-reload = true

# _ GLOBAL/WM _-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-

[global/wm]
margin-top = 0
margin-bottom = 0

# TOP BAR ############################################

[bar/top]
include-file = ~/.config/i3/polybar/blocks/fonts
modules-left = app web chrome vscode term rhytm calc uparch mpd
modules-center = i3
modules-right = alsa date xkeyboard power
include-file = ~/.config/i3/polybar/blocks/bar

tray-position = right
tray-detached = false
tray-maxsize = 22
tray-background = ${colors.background}
tray-offset-x = 0
tray-offset-y = 0
tray-padding = 0
tray-scale = 1.0

# LEFTTOP BAR ##########################################

[bar/lefttop]
include-file = ~/.config/i3/polybar/blocks/fonts
modules-left = partleft app vscode term rhytm calc partright
modules-center = i3
modules-right = date
include-file = ~/.config/i3/polybar/blocks/bar

# RIGHTOP BAR ##########################################

[bar/righttop]
include-file = ~/.config/i3/polybar/blocks/fonts
modules-left = partleft app chery chrome partright
modules-center = i3
modules-right = fs cpu memory date
include-file = ~/.config/i3/polybar/blocks/bar

# _ MODULES _-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_

include-file = ~/.config/i3/polybar/modules/modules.ini

# = IP ===========================================================

[module/ip]
type = custom/script
interval = 600
format = "<label>"
format-prefix = "ip: "
# format-padding = 1
exec = echo "$(wget -qO- https://canihazip.com/s | sed -e 's/[^[:digit:]\|.]//g')"
exec-if = ping -c 1 ya.ru

# = TOP ===========================================================

[module/tor]
type = custom/script
exec = ~/.config/i3/polybar/scripts/status tor
interval = 6
format = <label>
# format-padding = 1
click-left = "systemctl restart tor"
click-right = "systemctl stop tor"

# = TITLE ========================================================

[module/title]
type = internal/xwindow
format-padding = 1
label = "%title:0:20:...%"
label-maxlen = 20

# = TERM =========================================================

[module/term]
type = custom/text
content = 
click-left = xfce4-terminal &
click-right = xfce4-terminal -e htop &

# = APP ==========================================================

[module/app]
type = custom/text
content = 
click-left = rofi -modi run,drun -show drun -location 1 -xoffset 15 -yoffset 39 -line-padding 4 -columns 1 -width 25 -lines 10 -padding 15 -hide-scrollbar -show-icons -drun-icon-theme

# = RSS ==========================================================

[module/rss]
type = custom/text
content = 
click-left = xfce4-terminal -e newsboat &
click-right =

# = PARTRIGHT ====================================================

[module/partright]
type = custom/text
content = ⦘

# = PARTLEFT =====================================================

[module/partleft]
type = custom/text
content = ⦗

