# = CPU ==========================================================

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.primary}
label = %percentage%%

# = MEMORY =======================================================

[module/memory]
type = internal/memory
interval = 2
format-prefix = " "
label = %percentage_used%%

# = TEMPERATURE ==================================================

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60
format = <ramp> <label>
format-warn = <ramp> <label-warn>
label = %temperature%
label-warn = %temperature%
label-warn-foreground = ${colors.secondary}
ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-foreground = ${colors.primary}

# = ALSA =========================================================

[module/alsa]
type = internal/alsa
format-volume = <ramp-volume> <label-volume>
format-muted =  0%
ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 

# = XKEYBOARD ====================================================

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock
